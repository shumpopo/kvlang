MDScreen:
    name: 'Terms'
    MDFloatLayout:
        MDIconButton:
            icon: "chevron-left"
            pos_hint: {'center_y': 0.95}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "Register"

        MDTextButton:
            text: "Back"
            font_name: "fonts/PoppinsEL.otf"
            font_size: "15sp"
            pos_hint: {"center_x": .15, "center_y": .95}

            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "Register"

        ScrollView:
            size_hint_y: .9
            do_scroll_x: False
            do_scroll_y: True
            MDBoxLayout:
                orientation: "vertical"
                size: (root.width, root.height)
                height: self.minimum_height
                size_hint: None,None
                cols: 1

                MDLabel:
                    text: "Terms & Condition"
                    font_name: "fonts/OpenSans-Bold.ttf"
                    font_size: "20sp"
                    halign: "center"
                    padding: dp(16), dp(10)
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.size

                MDLabel:
                    text: "\tPlease read these terms and conditions carefully before using this TCU Advisor operated by Taguig City University students."
                    halign: 'justify'
                    font_name: "fonts/OpenSans-Semibold.ttf"
                    font_size: "12sp"
                    padding: dp(16), dp(10)
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.size

                MDLabel:
                    text: "Conditions of use"
                    halign: 'justify'
                    font_name: "fonts/OpenSans-Bold.ttf"
                    font_size: "15sp"
                    padding: dp(16), dp(10)
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.size

                MDLabel:
                    text: "By using this application, you certify that you have read and reviewed this Agreement and that you agree to comply with its terms. If you do not want to be bound by the terms of this Agreement, you are advised to stop using the application accordingly. TCU advisor only grants use and access of this application’s services to those who have accepted its terms."
