MDScreen:
    name: 'forgot_password'
    MDFloatLayout:
        MDIconButton:
            icon: "chevron-left"
            pos_hint: {'center_y': 0.95}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "Login"

        MDLabel:
            text: "F O R G O T "
            font_name: "fonts/Poppins.otf"
            font_size: "30sp"
            pos_hint: {"center_x": .6, "center_y": .85}

        MDLabel:
            text: "Y O U R\nP A S S W O R D ? "
            font_name: "fonts/Poppins.otf"
            font_size: "20sp"
            pos_hint: {"center_x": .6, "center_y": .79}
            color: rgba(255, 0, 0, 255)

        MDLabel:
            text: "We send you verification."
            font_name: "fonts/PoppinsEL.otf"
            font_size: "12sp"
            pos_hint: {"center_x": .62, "center_y": .7}

    MDFloatLayout:
        size_hint: .75, .05
        pos_hint: {"center_x": .5, "center_y": .65}
        MDTextField:
            id: email
            icon_left: "email"
            hint_text: "Email"
            font_name: "fonts/OpenSans-Semibold.ttf"
            pos_hint: {'center_x': .5,'center_y': 0.25}
            font_size: "14sp"
            cursor_width: "2sp"
            multiline: False


    MDFloatLayout:
        Button:
            text: "Send Verification "
            font_size: '12sp'
            size_hint: .4, .06
            pos_hint: {"center_x": .7, "center_y": .55}
            background_color: 0, 0, 0, 0
            font_name: "fonts/OpenSans-Bold.ttf"
            on_release:
                app.reset_password(email.text)
            canvas.before:
                Color:
                    rgb: rgba(1, 0, 0, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]