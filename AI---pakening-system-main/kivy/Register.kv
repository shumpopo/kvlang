MDScreen:
    name: "Register"
    Carousel:
        id: carousel
        on_current_slide: app.current_slide(self.index)
        MDFloatLayout:

            MDIconButton:
                icon: "chevron-left"
                pos_hint: {'center_y': 0.95}
                on_release:
                    root.manager.transition.direction = "right"
                    root.manager.current = "Login"

            MDLabel:
                text: "W E L C O M E ! , "
                font_name: "fonts/Poppins.otf"
                font_size: "30sp"
                pos_hint: {"center_x": .6, "center_y": .85}

            MDLabel:
                text: "T C U n i s t a . "
                font_name: "fonts/Poppins.otf"
                font_size: "20sp"
                pos_hint: {"center_x": .6, "center_y": .79}
                color: rgba(255, 0, 0, 255)

            MDLabel:
                text: "Create New Account."
                font_name: "fonts/PoppinsEL.otf"
                font_size: "14sp"
                pos_hint: {"center_x": .6, "center_y": .7}

            Image:
                source: "assets/TCUlogo.jpg"
                size_hint: .3,.3
                pos_hint: {'center_x': 0.71,'center_y': .75}

            MDIconButton:
                icon: "chevron-triple-right"
                pos_hint: {'center_x': .93, 'center_y': 0.04}
                on_release:
                    root.manager.transition.direction = "left"
                    app.next()

            MDFloatLayout:
                size_hint: .75, None
                pos_hint: {"center_x": .5, "center_y": .60}
                MDTextField:
                    id: stud_id
                    hint_text: "Student ID"
                    font_size: "14sp"
                    font_name: "fonts/OpenSans-Bold.ttf"
                    pos_hint: {'center_x': .5, 'center_y': 0.5}

            MDFloatLayout:
                size_hint: .75, None
                pos_hint: {"center_x": .5, "center_y": .525}
                MDTextField:
                    id: fname
                    hint_text: "First name"
                    font_size: "14sp"
                    font_name: "fonts/OpenSans-Bold.ttf"
                    pos_hint: {'center_x': .5, 'center_y': 0.5}

            MDFloatLayout:
                size_hint: .75, None
                pos_hint: {"center_x": .5, "center_y": .45}
                MDTextField:
                    id: lname
                    hint_text: "Last name"
                    font_size: "14sp"
                    font_name: "fonts/OpenSans-Bold.ttf"
                    pos_hint: {'center_x': .5, 'center_y': 0.5}

            MDFloatLayout:
                size_hint: .75, None
                pos_hint: {"center_x": .5, "center_y": .375}
                MDTextField:
                    id: year
                    hint_text: "Year"
                    font_size: "14sp"
                    font_name: "fonts/OpenSans-Bold.ttf"
                    pos_hint: {'center_x': .5, 'center_y': 0.5}

            MDFloatLayout:
                size_hint: .75, None
                pos_hint: {"center_x": .5, "center_y": .3}
                MDTextField:
                    id: course
                    hint_text: "Course"
                    font_size: "14sp"
                    font_name: "fonts/OpenSans-Bold.ttf"
                    pos_hint: {'center_x': .5, 'center_y': 0.5}

            MDFloatLayout:
                size_hint: .75, None
                pos_hint: {"center_x": .5, "center_y": .225}
                MDTextField:
                    id: section
                    hint_text: "Section"
                    font_size: "14sp"
                    font_name: "fonts/OpenSans-Bold.ttf"
                    pos_hint: {'center_x': .5, 'center_y': 0.5}

        MDFloatLayout:
            MDLabel:
                text: "S I G N  U P ! , "
                font_name: "fonts/Poppins.otf"
                font_size: "30sp"
                pos_hint: {"center_x": .6, "center_y": .85}

            MDLabel:
                text: "A C C O U N T . "
                font_name: "fonts/Poppins.otf"
                font_size: "20sp"
                pos_hint: {"center_x": .6, "center_y": .79}
                color: rgba(255, 0, 0, 255)

            MDLabel:
                text: "Create New Account."
                font_name: "fonts/PoppinsEL.otf"
                font_size: "14sp"
                pos_hint: {"center_x": .6, "center_y": .7}

            MDFloatLayout:
                size_hint: .75, None
                pos_hint: {"center_x": .5, "center_y": .625}
                MDTextField:
                    id: email
                    hint_text: "Email"
                    font_size: "14sp"
                    font_name: "fonts/OpenSans-Bold.ttf"
                    pos_hint: {'center_x': .5, 'center_y': 0.5}

            MDFloatLayout:
                size_hint: .75, None
                pos_hint: {"center_x": .5, "center_y": .55}
                MDTextField:
                    id: password
                    hint_text: "Password"
                    password: True
                    font_size: "14sp"
                    font_name: "fonts/OpenSans-Bold.ttf"
                    pos_hint: {'center_x': .5, 'center_y': 0.5}

            MDFloatLayout:
                size_hint: .75, None
                pos_hint: {"center_x": .5, "center_y": .475}
                MDTextField:
                    id: confirmpassword
                    hint_text: "Confirm password"
                    password: True
                    font_size: "14sp"
                    font_name: "fonts/OpenSans-Bold.ttf"
                    pos_hint: {'center_x': .5, 'center_y': 0.5}

            MDFloatLayout:
                Button:
                    text: "Sign Up "
                    size_hint: .5, .06
                    pos_hint: {"center_x": .5, "center_y": .10}
                    background_color: 0, 0, 0, 0
                    font_name: "fonts/OpenSans-Bold.ttf"
                    on_release:
                        app.register(email.text, password.text,confirmpassword.text, fname.text, lname.text, stud_id.text, year.text, course.text, section.text)
                    canvas.before:
                        Color:
                            rgb: rgba(1, 0, 0, 255)
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [10]

                MDFloatLayout:
                    halign: "center"
                    MDCheckbox:
                        id: checkbox
                        size_hint: None, None
                        size: "48dp", "48dp"
                        pos_hint: {"center_x": .15, "center_y": .4}

                    MDTextButton:
                        text: "I read and agree [u]Terms & Condition[/u]"
                        markup: True
                        font_name: "fonts/OpenSans-Bold.ttf"
                        font_size: "10sp"
                        pos_hint: {"center_x": .5, "center_y": .4}
                        on_release:
                            root.manager.transition.direction = "left"
                            root.manager.current = "Terms"


    MDLabel:
        id: slide0
        text:"."
        color: rgba(253, 0, 0, 255)
        pos_hint: {"center_x": .97, "center_y": .07}
        font_size: "80sp"

    MDLabel:
        id: slide1
        text:"."
        color: rgba(170, 170, 170, 255)
        pos_hint: {"center_x": 1.03, "center_y": .07}
        font_size: "80sp"
